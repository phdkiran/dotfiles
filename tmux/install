#!/usr/bin/env bash
brew install tmux && brew install reattach-to-user-namespace
if [ $? -eq 0 ]; then
  cd "$(dirname "${BASH_SOURCE}")"
  WD=`pwd`
  rm -f ~/.tmux.conf
  ln -s ${WD}/.tmux.conf ~/.tmux.conf && echo 'Link ~/.tmux.conf'
  rm -f /usr/local/bin/tmux-battery
  ln -s ${WD}/tmux-battery /usr/local/bin/tmux-battery && echo 'Link /usr/local/bin/tmux-battery'
  rm -f /usr/local/bin/tmux-session
  ln -s ${WD}/tmux-session /usr/local/bin/tmux-session && echo 'Link /usr/local/bin/tmux-session'
  # Pair programming tools
  gem install github-auth
else
  echo 'Can not install tmux. Check brew first.'
fi
