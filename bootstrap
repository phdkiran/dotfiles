#!/usr/bin/env bash

echo 'You are about to clone romanzolotarev/dotfiles and run it. Sure? [n/Y]'
read CONFIRMATION

if [ "$CONFIRMATION" == 'y' ]; then
  xcode-select --install
  mkdir -p ~/Repositories && mkdir -p ~/Repositories/romanzolotarev
  cd ~/Repositories/romanzolotarev
  git clone https://github.com/romanzolotarev/dotfiles.git && cd dotfiles
  osx/install
  bash-and-brew/install
  git/install
  vim/install
  tmux/install
fi
